# Example values file for production deployment
# Copy this file and customize for your environment

admin:
  username: admin
  # Generate with: echo -n "yourpassword" | argon2 $(openssl rand -base64 16) -id -t 3 -m 12 -p 1 -l 32 -e
  passwordHash: "$argon2id$v=19$m=4096,t=3,p=1$c29tZXJhbmRvbXNhbHQ$abcdefghijklmnopqrstuvwxyz123456"

# Generate with: openssl rand -base64 32
jwtSecret: "your-random-jwt-secret-here-change-me"

replicaCount: 2

image:
  backend:
    repository: ghcr.io/yourusername/dkonsole-backend
    tag: "1.0.0"
    pullPolicy: IfNotPresent
  frontend:
    repository: ghcr.io/yourusername/dkonsole-frontend
    tag: "1.0.0"
    pullPolicy: IfNotPresent

# Example for private registry
# imagePullSecrets:
#   - name: regcred

ingress:
  enabled: true
  className: "nginx"
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/proxy-body-size: "10m"
  hosts:
    - host: dkonsole.example.com
      paths:
        - path: /api
          pathType: Prefix
          backend: backend
        - path: /
          pathType: Prefix
          backend: frontend
  tls:
    - secretName: dkonsole-tls
      hosts:
        - dkonsole.example.com

resources:
  backend:
    requests:
      cpu: 200m
      memory: 256Mi
    limits:
      cpu: 1000m
      memory: 1Gi
  frontend:
    requests:
      cpu: 100m
      memory: 128Mi
    limits:
      cpu: 500m
      memory: 512Mi

autoscaling:
  enabled: true
  minReplicas: 2
  maxReplicas: 5
  targetCPUUtilizationPercentage: 80

nodeSelector:
  kubernetes.io/arch: amd64

# Example affinity for high availability
affinity:
  podAntiAffinity:
    preferredDuringSchedulingIgnoredDuringExecution:
      - weight: 100
        podAffinityTerm:
          labelSelector:
            matchExpressions:
              - key: app.kubernetes.io/name
                operator: In
                values:
                  - dkonsole
          topologyKey: kubernetes.io/hostname
